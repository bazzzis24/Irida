<Window x:Class="Ирида.Photo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ирида"
        mc:Ignorable="d"
        Title="Photo" MinHeight="150" MinWidth="300" Width="250" Height="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Name="Image1" Stretch="Uniform"/>
            <Button Grid.Row="2" Click="ExitButton_Click" Name="ExitButton" Width="150" Height="50" Content="Закрыть" VerticalAlignment="Center" Cursor="Hand"/>
    </Grid>
</Window>
